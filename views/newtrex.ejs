<%include header.ejs%>
<div class="container">
    <div class="row">
        <h1 class="page-header text-center">New t-rex</h1>

        <%include menu.ejs%>
    </div>
    <div class="row panel-group">
        <div class="col-md-push-3 col-md-6 col-xs-12">
            <form class="panel" method="post" action="/myfarm/new">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" class="form-control">
                </div>
                <div class="form-group">
                    <label for="sex">Sex</label>
                    <select id="sex" class="form-control" name="sex">
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="age">Age</label>
                    <input type="number" id="age"  name="age" min="1" step="1" class="form-control">
                </div>
                <div class="form-group">
                    <label for="size">Size</label>
                    <input type="number" id="size" name="size" min="10" step="10" class="form-control">
                </div>
                <div class="">
                    <label for="image">Image URL</label>
                    <input type="text" id="image" name="image" min="10" step="10" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="/myfarm" class="btn btn-default">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%include footer.ejs%>