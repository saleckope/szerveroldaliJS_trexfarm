<% include header %>
<div class="container">
    <div class="row">
        <h1 class="page-header text-center">My farm</h1>

        <% include menu.ejs %>
    </div>
    <div class="row">
        <div class="col-md-push-2 col-md-8 col-xs-12">
            <div class="col-md-push-2 col-md-8 col-xs-12">
                <table class="table table-stripped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for (i = 0; i < trexes.length; i++) { %>
                    <tr>
                        <td><a href="/myfarm/<%= trexes[i]._id %>">
                                <%= trexes[i].name %>
                            </a></td>
                        <td class="text-right" style="display: flex; justify-content: flex-end;">
                            <a href="/myfarm/<%= trexes[i]._id %>/edit" style="margin: 0 10px;" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>

                            <form method="post" action="/myfarm/<%= trexes[i]._id %>/delete">
                                <button style="margin: 0 10px;" class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
                <div class="text-center">
                    <a href="/myfarm/new" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        New</a>
                </div>
            </div>
        </div>
    </div>
</div>

<% include footer.ejs %>