<%include header.ejs%>
<div class="container">
    <div class="row">
        <h1 class="page-header text-center">My profile</h1>

        <%include menu.ejs%>
    </div>
    <div class="row panel-group">
        <div class="panel-body col-xs-12">
            <div class="row">
                <div class="col-md-6" style="text-align: center;">
                    <img src="<%= profile.image %>" style="max-width: 400px;">
                </div>
                <div class="col-md-6">
                    <div>
                        <h4>Name</h4>
                        <div><%= profile.username %></div>
                    </div>
                    <div>
                        <h4>Email</h4>
                        <div><%= profile.email %></div>
                    </div>
                    <div>
                        <h4>Age</h4>
                        <div><%= profile.age %></div>
                    </div>
                    <div>
                        <h4>Number of t-rexes</h4>
                        <div><%= profile.trexes.length %></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row panel-group text-center">
        <div>
            <a href="/profile/edit" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
        </div>
    </div>
</div>

<%include footer.ejs%>